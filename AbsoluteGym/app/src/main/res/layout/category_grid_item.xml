<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_gravity="center" android:gravity="center"
    android:background="@drawable/rounded_edit" android:orientation="vertical">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/categoriGridImage"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:scaleType="fitXY"
        android:padding="1dp"
        android:background="@drawable/rect_back_image" />

    <TextView
        android:id="@+id/categoriGridText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:text="JMD Group"
        android:textColor="@color/app_theme_color"
        android:background="@color/white_color"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/categoriGridID"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

</LinearLayout>
